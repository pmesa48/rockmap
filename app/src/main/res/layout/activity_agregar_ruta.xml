<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="moviles.uniandes.com.rockmapv2.AgregarRutaActivity">


    <EditText
        android:id="@+id/parqueactual"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:textColor="#000"
        android:textAlignment="center"
        />
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapRuta"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/parqueactual"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/mapRuta"
        android:id="@+id/btnTerminar"

        android:text="Agregar"/>

</LinearLayout>
